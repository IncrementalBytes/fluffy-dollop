<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="2dp"
  android:layout_marginStart="2dp"
  android:layout_marginEnd="2dp"
  android:background="?attr/colorPrimary">

  <TextView
    android:id="@+id/series_item_text_series"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:ellipsize="end"
    android:text="@string/placeholder"
    android:textColor="@color/secondaryColor"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toStartOf="@id/series_item_text_publisher"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/series_item_text_publisher"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/placeholder"
    android:textColor="@color/primaryColor"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/series_item_text_series"
    app:layout_constraintBottom_toBottomOf="@id/series_item_text_series"/>

  <TextView
    android:id="@+id/series_item_text_volume"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/volume"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/series_item_text_series"/>
  <TextView
    android:id="@+id/series_item_text_volume_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/placeholder"
    android:textColor="@color/primaryColor"
    app:layout_constraintStart_toEndOf="@id/series_item_text_volume"
    app:layout_constraintTop_toTopOf="@id/series_item_text_volume"
    app:layout_constraintBottom_toBottomOf="@id/series_item_text_volume"/>

  <TextView
    android:id="@+id/series_item_text_issue"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/issue_owned"
    app:layout_constraintEnd_toStartOf="@id/series_item_text_issue_value"
    app:layout_constraintTop_toBottomOf="@id/series_item_text_series"/>
  <TextView
    android:id="@+id/series_item_text_issue_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/placeholder"
    android:textColor="@color/primaryColor"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/series_item_text_issue"
    app:layout_constraintBottom_toBottomOf="@id/series_item_text_issue"/>

</androidx.constraintlayout.widget.ConstraintLayout>