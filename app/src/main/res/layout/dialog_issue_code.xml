<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/issue_code_image_code"
        android:layout_width="@dimen/image_width_thumbnail"
        android:layout_height="@dimen/image_height_thumbnail"
        android:layout_margin="@dimen/default_image_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_search_dark" />

    <TextView
        android:id="@+id/issue_code_text_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginEnd="8dp"
        android:labelFor="@id/issue_code_edit_series_code"
        android:text="@string/enter_issue_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issue_code_image_code" />

    <EditText
        android:id="@+id/issue_code_edit_series_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issue_code_text_instructions" />

    <TextView
        android:id="@+id/issue_code_text_separator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="@string/separator"
        app:layout_constraintBottom_toBottomOf="@+id/issue_code_edit_series_code"
        app:layout_constraintEnd_toStartOf="@id/issue_code_edit_issue_code"
        app:layout_constraintStart_toEndOf="@+id/issue_code_edit_series_code"
        app:layout_constraintTop_toTopOf="@+id/issue_code_edit_series_code" />

    <EditText
        android:id="@+id/issue_code_edit_issue_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:ems="5"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/issue_code_edit_series_code"
        app:layout_constraintStart_toEndOf="@+id/issue_code_text_separator"
        app:layout_constraintTop_toTopOf="@+id/issue_code_edit_series_code"
        app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>