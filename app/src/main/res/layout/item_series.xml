<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="2dp"
  android:layout_marginStart="2dp"
  android:layout_marginEnd="2dp">

  <TextView
    android:id="@+id/series_item_text_title"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:ellipsize="end"
    android:text="@string/placeholder"
    android:textColor="@color/primaryColor"
    android:textSize="18sp"
    app:layout_constraintEnd_toStartOf="@id/series_item_text_publisher"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/series_item_text_publisher"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/placeholder"
    android:textColor="@color/primaryColor"
    android:textSize="12sp"
    app:layout_constraintBottom_toBottomOf="@id/series_item_text_title"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/series_item_text_title" />

  <TextView
    android:id="@+id/series_item_text_published"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/published_date"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/series_item_text_title"/>
  <TextView
    android:id="@+id/series_item_text_published_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/placeholder"
    android:textColor="@color/primaryLightColor"
    app:layout_constraintBottom_toBottomOf="@id/series_item_text_published"
    app:layout_constraintStart_toEndOf="@id/series_item_text_published"
    app:layout_constraintTop_toTopOf="@id/series_item_text_published" />

  <TextView
    android:id="@+id/series_item_text_issue"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/issue_owned"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/series_item_text_issue_value"
    app:layout_constraintTop_toBottomOf="@id/series_item_text_title"/>
  <TextView
    android:id="@+id/series_item_text_issue_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/placeholder"
    android:textColor="@color/primaryLightColor"
    app:layout_constraintBottom_toBottomOf="@id/series_item_text_issue"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/series_item_text_issue" />

</androidx.constraintlayout.widget.ConstraintLayout>