<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="2dp"
  android:layout_marginStart="2dp"
  android:layout_marginEnd="2dp"
  android:background="?attr/colorPrimary">

  <TextView
    android:id="@+id/comic_item_text_title"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:ellipsize="end"
    android:text="@string/placeholder"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/comic_item_text_series"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/placeholder"
    android:textColor="@color/secondaryColor"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/comic_item_text_title"/>

  <TextView
    android:id="@+id/comic_item_text_own"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/owned"
    app:layout_constraintTop_toTopOf="@id/comic_item_image_own"
    app:layout_constraintBottom_toBottomOf="@id/comic_item_image_own"
    app:layout_constraintStart_toStartOf="parent"/>
  <ImageView
    android:id="@+id/comic_item_image_own"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_image_margin"
    android:contentDescription="@string/user_owns_this_comic"
    android:src="@drawable/ic_unchecked_dark"
    app:layout_constraintTop_toBottomOf="@id/comic_item_text_series"
    app:layout_constraintStart_toEndOf="@id/comic_item_text_own"/>
  <TextView
    android:id="@+id/comic_item_text_read"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/read"
    app:layout_constraintTop_toTopOf="@id/comic_item_image_read"
    app:layout_constraintBottom_toBottomOf="@id/comic_item_image_read"
    app:layout_constraintStart_toEndOf="@id/comic_item_image_own"/>
  <ImageView
    android:id="@+id/comic_item_image_read"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_image_margin"
    android:contentDescription="@string/user_read_this_comic"
    android:src="@drawable/ic_unchecked_dark"
    app:layout_constraintTop_toBottomOf="@id/comic_item_text_series"
    app:layout_constraintStart_toEndOf="@id/comic_item_text_read"/>

  <TextView
    android:id="@+id/comic_item_text_issue"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/issue_number"
    app:layout_constraintTop_toBottomOf="@id/comic_item_text_series"
    app:layout_constraintEnd_toStartOf="@id/comic_item_text_issue_value"/>
  <TextView
    android:id="@+id/comic_item_text_issue_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/placeholder"
    android:textColor="@color/primaryColor"
    app:layout_constraintTop_toTopOf="@id/comic_item_text_issue"
    app:layout_constraintBottom_toBottomOf="@id/comic_item_text_issue"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>