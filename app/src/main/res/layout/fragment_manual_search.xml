<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical">

  <TextView
    android:id="@+id/manual_search_text_series"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/series_upc"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="@id/manual_search_edit_series"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/manual_search_edit_series"/>
  <EditText
    android:id="@+id/manual_search_edit_series"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:autofillHints="@string/search"
    android:gravity="end"
    android:hint="@string/search_series_hint"
    android:inputType="number"
    android:textColor="?attr/colorAccent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/manual_search_text_issue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/issue_upc"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="@id/manual_search_edit_issue"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/manual_search_edit_issue"/>
  <EditText
    android:id="@+id/manual_search_edit_issue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:autofillHints="@string/search_issue_hint"
    android:gravity="end"
    android:hint="@string/search_issue_hint"
    android:inputType="number"
    android:textColor="?attr/colorAccent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/manual_search_edit_series"/>

  <Button
    android:id="@+id/manual_search_button_continue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/continue_button"
    app:layout_constraintEnd_toStartOf="@+id/manual_search_button_cancel"
    app:layout_constraintTop_toBottomOf="@+id/manual_search_edit_issue"/>
  <Button
    android:id="@+id/manual_search_button_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/cancel_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/manual_search_edit_issue"/>

  <TextView
    android:id="@+id/manual_search_text_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/list_of_series_comics"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/manual_search_button_continue"/>
  <android.support.v7.widget.RecyclerView
    android:id="@+id/manual_search_list_view"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/default_view_margin"
    android:contentDescription="@string/desc_comic_list"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/manual_search_text_list"
    tools:listitem="@layout/comic_book_item" />

</android.support.constraint.ConstraintLayout>
