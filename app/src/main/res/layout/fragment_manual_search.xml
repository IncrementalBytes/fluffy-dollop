<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:id="@+id/manual_search_text_no_barcode"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/bar_code_not_found"
    android:textColor="?attr/colorError"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/manual_search_text_product"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/series_upc"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="@id/manual_search_edit_product"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/manual_search_edit_product"/>
  <EditText
    android:id="@+id/manual_search_edit_product"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:autofillHints="@string/search"
    android:gravity="end"
    android:hint="@string/hint_search_product"
    android:inputType="number"
    android:textColor="@color/secondaryLightColor"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/manual_search_text_no_barcode"/>
  <ImageView
    android:id="@+id/manual_search_image_product"
    android:layout_width="@android:dimen/thumbnail_width"
    android:layout_height="@android:dimen/notification_large_icon_width"
    android:layout_margin="@dimen/default_view_margin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/manual_search_edit_product"
    app:srcCompat="@drawable/barcode_product"
    android:contentDescription="@string/hint_img_product_code"/>

  <TextView
    android:id="@+id/manual_search_text_issue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/issue_upc"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="@id/manual_search_edit_issue"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/manual_search_edit_issue"/>
  <EditText
    android:id="@+id/manual_search_edit_issue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:autofillHints="@string/hint_search_issue"
    android:gravity="end"
    android:hint="@string/hint_search_issue"
    android:inputType="number"
    android:textColor="@color/secondaryLightColor"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/manual_search_image_product"/>
  <ImageView
    android:id="@+id/manual_search_image_issue"
    android:layout_width="@android:dimen/thumbnail_width"
    android:layout_height="@android:dimen/notification_large_icon_height"
    android:layout_margin="@dimen/default_view_margin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/manual_search_edit_issue"
    app:srcCompat="@drawable/barcode_issue"
    android:contentDescription="@string/hint_img_issue_code"/>

  <Button
    android:id="@+id/manual_search_button_continue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/continue_button"
    app:layout_constraintEnd_toStartOf="@+id/manual_search_button_cancel"
    app:layout_constraintTop_toBottomOf="@+id/manual_search_image_issue"/>
  <Button
    android:id="@+id/manual_search_button_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_view_margin"
    android:text="@string/cancel_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/manual_search_image_issue"/>

</androidx.constraintlayout.widget.ConstraintLayout>
